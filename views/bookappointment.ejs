      <div class="booking-section">
        <div class="booking-header">
          <h2>Select a Date & Time</h2>
          <div class="featured-badge">
            Featured Doctor
          </div>
        </div>
        
        <div class="calendar-navigation">
          <button id="prevMonth" class="nav-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"/></svg>
          </button>
          <h3 id="currentMonth">March 2025</h3>
          <button id="nextMonth" class="nav-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>
          </button>
        </div>
        
        <div class="calendar">
          <div class="weekdays" id="weekdays">
            <div>MON</div>
            <div>TUE</div>
            <div>WED</div>
            <div>THU</div>
            <div>FRI</div>
            <div>SAT</div>
            <div>SUN</div>
          </div>
          
          <div class="calendar-days" id="calendarDays">
            <!-- Calendar days will be generated by JavaScript -->
          </div>
        </div>
        
        <div id="timeSelection" class="time-selection hidden">
          <h3>Time zone</h3>
          <div class="timezone-selector">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
            <select id="timezone">
              <option>Eastern Time (ET)</option>
              <option>Pacific Time (PT)</option>
              <option>Central Time (CT)</option>
              <option>Mountain Time (MT)</option>
            </select>
          </div>
          
          <h3 id="availableTimesHeading">Available times on March <span id="selectedDateDisplay"></span></h3>
          <div class="time-slots" id="timeSlots">
            <!-- Time slots will be generated by JavaScript -->
          </div>
          
          <button id="confirmButton" class="confirm-button disabled" disabled>
            Confirm Appointment
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
  // State variables
  let selectedDate = null;
  let selectedTime = null;
  let currentMonth = 'March 2025';
  
  // Mock data for available time slots
  const timeSlots = ['9:00 AM', '10:00 AM', '11:30 AM', '2:00 PM', '3:30 PM', '5:00 PM'];
  
  // Mock data for available dates (highlighted in blue)
  const availableDates = [1, 2, 3, 5, 7];
  
  // DOM elements
  const calendarDaysEl = document.getElementById('calendarDays');
  const currentMonthEl = document.getElementById('currentMonth');
  const prevMonthBtn = document.getElementById('prevMonth');
  const nextMonthBtn = document.getElementById('nextMonth');
  const timeSelectionEl = document.getElementById('timeSelection');
  const timeSlotsEl = document.getElementById('timeSlots');
  const selectedDateDisplayEl = document.getElementById('selectedDateDisplay');
  const confirmButton = document.getElementById('confirmButton');
  
  // Initialize calendar
  renderCalendar();
  
  // Event listeners
  prevMonthBtn.addEventListener('click', () => {
    currentMonth = 'February 2025';
    currentMonthEl.textContent = currentMonth;
    renderCalendar();
  });
  
  nextMonthBtn.addEventListener('click', () => {
    currentMonth = 'April 2025';
    currentMonthEl.textContent = currentMonth;
    renderCalendar();
  });
  
  confirmButton.addEventListener('click', () => {
    if (selectedDate && selectedTime) {
      alert(`Appointment confirmed for ${currentMonth} ${selectedDate} at ${selectedTime}`);
    }
  });
  
  // Functions
  function renderCalendar() {
    // Clear calendar
    calendarDaysEl.innerHTML = '';
    
    // Generate calendar days (31 days for simplicity)
    for (let day = 1; day <= 31; day++) {
      const dayButton = document.createElement('button');
      dayButton.textContent = day;
      dayButton.classList.add('day-button');
      
      if (availableDates.includes(day)) {
        dayButton.classList.add('available');
        dayButton.addEventListener('click', () => handleDateSelect(day));
      } else {
        dayButton.classList.add('unavailable');
        dayButton.disabled = true;
      }
      
      if (selectedDate === day) {
        dayButton.classList.add('selected');
      }
      
      calendarDaysEl.appendChild(dayButton);
    }
  }
  
  function handleDateSelect(day) {
    selectedDate = day;
    selectedTime = null; // Reset time selection when date changes
    
    // Update UI
    renderCalendar();
    renderTimeSlots();
    
    // Show time selection
    timeSelectionEl.classList.remove('hidden');
    selectedDateDisplayEl.textContent = day;
    
    // Update confirm button
    updateConfirmButton();
  }
  
  function renderTimeSlots() {
    // Clear time slots
    timeSlotsEl.innerHTML = '';
    
    // Generate time slots
    timeSlots.forEach(time => {
      const timeSlot = document.createElement('button');
      timeSlot.textContent = time;
      timeSlot.classList.add('time-slot');
      
      if (selectedTime === time) {
        timeSlot.classList.add('selected');
      }
      
      timeSlot.addEventListener('click', () => handleTimeSelect(time));
      timeSlotsEl.appendChild(timeSlot);
    });
  }
  
  function handleTimeSelect(time) {
    selectedTime = time;
    
    // Update UI
    renderTimeSlots();
    
    // Update confirm button
    updateConfirmButton();
  }
  
  function updateConfirmButton() {
    if (selectedDate && selectedTime) {
      confirmButton.disabled = false;
      confirmButton.classList.remove('disabled');
    } else {
      confirmButton.disabled = true;
      confirmButton.classList.add('disabled');
    }
  }
});
  </script>
